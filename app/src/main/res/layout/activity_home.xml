<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@color/Background">



    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:src="@drawable/policebadge" />

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/muli_bold"
            android:text="Safe-Guard"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="46sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/muli_extralight"
            android:text=" Built For Your Saftey"
            android:textColor="@color/black"
            android:textSize="25sp" />
<LinearLayout
    android:layout_marginTop="60dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/goToUser"
        android:onClick="goToUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="User"
        android:padding="14dp"
        android:backgroundTint="#314e52"
      android:layout_margin="20dp"/>

    <Button
        android:id="@+id/goToAdmin"
        android:onClick="goToAdmin"
        android:layout_width="0dp"
        android:padding="14dp"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="#314e52"
        android:text = "Officials" />


</LinearLayout>
        <Button
            android:id="@+id/decriptionOfApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="How we Work ?"
            android:textColor="#000"

            />





    </LinearLayout>




</ScrollView>